{
    "variables": {
        "aws_access_key": "{{env `PACKER_VAR_AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `PACKER_VAR_AWS_SECRET_KEY`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-west-1",
            "source_ami": "ami-405f7226",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "step2_{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "provisioning/shell/redis.sh"
        }
    ]
}
